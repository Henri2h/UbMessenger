<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.henri2h.cchatvue" version="1.8.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CChatVue</name>
    <description>
        CChat app
    </description>
    <author email="me@henri2h.fr" href="https://henri2h.fr">
        henri2h
    </author>
    
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    
    <icon src="../public/favicon-192x192.png" />

    <access origin="*" />
                   
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />                 

    <platform name="android">
        <allow-intent href="market:*" />
       
        <preference name="CodePushDeploymentKey" value="fGRUXs_tx926P8LUyBLx0tDoYU5ZzeXXhzBc2" />
        <preference name="APP_SECRET" value="b45b1c6a-2115-40b8-b808-713f08db501a" />
        
        <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
